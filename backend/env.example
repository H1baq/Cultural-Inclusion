# MongoDB Atlas Configuration
# Get your MongoDB Atlas URI from: https://cloud.mongodb.com
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Fallback to local MongoDB (for development)
MONGODB_URI=mongodb://localhost:27017/cultural-inclusion

# Server Configuration
PORT=5002
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_EXPIRE=7d

# CORS Configuration (for production)
CORS_ORIGIN=https://your-frontend-domain.com

# Optional: MongoDB Atlas Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# Optional: Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true 